<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    tools:context=".activities.foldersActivity.fragments.FolderFragment"
    android:layout_marginTop="8dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        >


        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginHorizontal="4dp"
            android:contentDescription="@string/folder_icon"
            android:src="@drawable/ic_folder_primary_24dp"
            android:id="@+id/folder_icon"
            />

        <TextView
            android:id="@+id/folder_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/black"
            tools:text="@string/folder_name_placeholder" />

        <TextView
            android:id="@+id/folder_no_of_messages"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/black"
            tools:text="@string/zero"
        />
    </LinearLayout>


</androidx.cardview.widget.CardView>