<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.contactsActivity.fragments.ContactFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:popupTheme="@style/Theme.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title="@string/app_name">

        <Button
            android:id="@+id/toolbar_email_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toolbar_email_del"
            />
        <Button
            android:id="@+id/toolbar_email_repl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toolbar_email_repl"/>
        <Button
            android:id="@+id/toolbar_email_repl_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toolbar_email_repl_all"/>
        <Button
            android:id="@+id/toolbar_email_forw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toolbar_email_forw"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <fragment
            android:id="@+id/fragment4"
            android:name="com.ftn.mailClient.activities.emailsActivity.fragments.EmailFragment"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_marginTop="58dp"
            tools:layout="@layout/fragment_email"/>

        <Button
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_save" />
    </LinearLayout>


</androidx.cardview.widget.CardView>
