<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.contactsActivity.fragments.ContactFragment"
    android:padding="@dimen/padding_8dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/firstName"
            android:paddingRight="@dimen/padding_8dp"
            />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/john_doe"
            android:id="@+id/fist_name_contact"
            />

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lastName"
            android:paddingRight="@dimen/padding_8dp"
            />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/john_doe"
            android:id="@+id/last_name_contact"
            />

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/displayName"
            android:paddingRight="@dimen/padding_8dp"
            />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/john_doe"
            android:id="@+id/display_name_contact"
            />

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emailContact"
            android:paddingRight="@dimen/padding_8dp"
            />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/emailJohnDoe"
            android:id="@+id/email_name_contact"
            />

    </LinearLayout>
</LinearLayout>